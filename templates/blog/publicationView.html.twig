{% extends 'base.html.twig' %}

{% block title %}Détails de la publication{% endblock %}


{% block body %}

    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center my-5">{{ article.title }}</h1>
        </div>


        <div class="row">

            <div class="col-12 col-md-8 offset-md-2">

                <div class="card my-2 bg-black">

                    <div class="card-body">

                        <footer class="blockquote-footer mt-0 mb-4">Publié le <strong class="text-light">{{ article.publicationDate|date('d-m-Y à H:i:s')}}</strong> par <strong class="text-light">{{ article.author.pseudonym}}</strong></footer>

                        <div class="mb-2">
                            {{ article.content|purify }}
                        </div>

                        {% if is_granted('ROLE_ADMIN') %}

                            <p class="mb-0 mt-3">

                                <a href="{{ path('blog_publication_edit', {'id': article.id}) }}" class="text-warning me-3 text-decoration-none">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>

                                <a onclick="return confirm('Etes-vous sûr de vouloir supprimer cette publication?')" href="{{ path('blog_publication_delete', {'id': article.id, csrf_token: csrf_token('blog_publication_delete_' ~ article.id ) }) }}" class="text-decoration-none text-danger"><i class="fas fa-trash-alt me-1"></i>Supprimer</a>
                            </p>

                        {% endif %}

                        <a href="{{ path('blog_publication_list') }}">Retour à la liste des articles</a>

                    </div>

                </div>

            </div>
        </div>

    </div>
{% endblock %}